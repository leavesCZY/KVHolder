<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSetUserGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="随机设置 UserKV 的值"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnPrintUserGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打印 UserKV 的内容"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnCleanUserGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清除 UserKV 的内容"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnSetPreferenceGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="随机设置 PreferenceKV 的值"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnPrintPreferenceGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打印 PreferenceKV 的内容"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnCleanPreferenceGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清除 PreferenceKV 的内容"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnClearLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="清除日志"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

</LinearLayout>